@{
    ViewData["Title"] = "AddProcedure";
}
@model AddProcedureModel
<h1 class="text-center mt-2">Create new Procedure</h1>
<form asp-controller="Procedure" asp-action="AddProcedure" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
         <div class="form-floating mb-3">
          <input asp-for=@Model.Name class="form-control" value=@Model.Name>
          <label for=@Model.Name>Procedure Name</label>
          <span asp-validation-for=@Model.Name class="text-danger"></span>
        </div>
        
        <div class="form-floating mb-3">
        <textarea style="white-space: pre-wrap" asp-for=@Model.Description class="form-control" value=@Model.Description></textarea>
        <label for=@Model.Description>Description</label>
        <span asp-validation-for=@Model.Description class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
          <input type="number" name="Price" range="1,1000000"class="form-control" value=@Model.Price>
          <label for=@Model.Price>Price</label>
          <span asp-validation-for=@Model.Price typeof="number" class="text-danger"></span>
        </div>

        <div class="d-grid gap-2">
          <button class="btn btn-primary" type="submit">Create</button>
        </div>
</form>
