@{
    ViewData["Title"] = "Edit User";
}

@model ShowUserInfoModel

<table class="table">
    <thead>
        <tr>
            <th scope="col">Current Username</th>
            <th scope="col">Current Full Name</th>
            <th scope="col">Current Email</th>
            <th scope="col">Current Roles</th>
        </tr>
    </thead>
    <tbody>
        <tr class="table-active">
            <td>@Model.Username</td>
            <td>@Model.FullName</td>
            <td>@Model.Email</td>
            <td>
                @String.Join(";",@Model.Roles)</td>
        </tr>

    </tbody>
</table>

<form class="form-inline" asp-area="Admin" asp-controller="Admin" asp-action="EditUser" method="post">

    <p class="text-primary">New Username:</p>
    <input asp-for=@Model.Username class="form-control" value=@Model.Username>
    <span asp-validation-for=@Model.Username class="text-danger"></span>
    <br />

    <p class="text-primary">New Full Name:</p>
    <input asp-for=@Model.FullName class="form-control" value=@Model.FullName>
    <span asp-validation-for=@Model.FullName class="text-danger"></span>
    <br />

    <p class="text-primary">New Email:</p>
    <input asp-for=@Model.Email class="form-control" value=@Model.Email>
    <span asp-validation-for=@Model.Email class= "text-danger"></span>
    <br />

    <div class="col-lg-6 col-md-6 col-12">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <p class="text-primary">Roles Select</p>
                <select class="form-control select2bs4" asp-for=@Model.Roles style="width: 100%">
                    <option value="Admin">Admin</option>
                    <option value="User">User</option>
                    <option value="Guest">Guest</option>
                </select>
            </div>
        </div>
    </div>

    <input asp-for="UserId" class="form-control" type="hidden" value=@Model.UserId>
    <br />
    <button class="btn btn-danger" type="submit">Save changes</button>

    <a href="/Admin/Admin/ShowUsers" class="btn btn-primary" role="button">Back</a>

</form>
