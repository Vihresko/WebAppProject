@{
    ViewData["Title"] = "Login";
}
@model LoginFormModel

<div class="div-center">
    <div class="content">
        <b class="offset-2">Hello, please log in to continue...</b>
        <br />
        <wbr />
        <div class="d-flex justify-content-sm-center">
            
            <form asp-controller="User" asp-action="Login" method="post">
                <div class="row-sm-5">

                    <div class="form-floating mb-2">
                        <input type="text" asp-for="Username" class="form-control" id="Username" name="Username" />
                        <label class="offset-3" asp-for="Username">Username</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input type="password" asp-for="Password" class="form-control" id="Password" name="Password" />
                        <label class="offset-3" asp-for="Password">Password</label>
                    </div>
                </div>
                <button type="submit" class="btn-primary">Login</button>
            </form>
        </div>
    </div>
</div>
