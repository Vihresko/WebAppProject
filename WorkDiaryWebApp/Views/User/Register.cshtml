@{
    ViewData["Title"] = "Register";
}
@model RegisterFormModel

<h1 class="text-center mt-2">Creat new account</h1>
<form asp-controller="User" asp-action="Register" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          <div class="form-floating mb-3">
          <input type="text" name="Username" class="form-control" id="floatingInput" value=@Model.Username>
          <label for="floatingInput">Username</label>
           <span asp-validation-for="Username" class="text-danger"></span>
           </div>     

         <div class="form-floating mb-3">
          <input type="text" name="FirstName" class="form-control" id="floatingInput" value=@Model.FirstName>
          <label for="floatingInput">First Name</label>
          <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
          <input type="text" name="LastName" class="form-control" id="floatingInput" value=@Model.LastName>
          <label for="floatingInput">Last Name</label>
           <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
          <input type="email" name="Email" class="form-control" id="floatingInput" value=@Model.Email>
          <label for="floatingInput">Email</label>
           <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
          <input type="password" name="Password" class="form-control" id="floatingInput" value=@Model.Password>
          <label for="floatingInput">Password</label>
           <span asp-validation-for="Password" class="text-danger"></span>
        </div>

         <div class="form-floating mb-3">
          <input type="password" name="ConfirmPassword" class="form-control" id="floatingInput" value=@Model.ConfirmPassword>
          <label for="floatingInput">ConfirmPassword</label>
           <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
          <input type="text" name="PhoneNumber" class="form-control" id="floatingInput" value=@Model.PhoneNumber>
          <label for="floatingInput">PhoneNumber</label>
           <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

         <div class="form-floating mb-3">
          <input type="text" name="Town" class="form-control" id="floatingInput" value=@Model.Town>
          <label for="floatingInput">Town</label>
           <span asp-validation-for="Town" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
          <input type="text" name="Address" class="form-control" id="floatingInput" value=@Model.Address>
          <label for="floatingInput">Address</label>
           <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="d-grid gap-2">
          <button class="btn btn-primary" type="submit">Create</button>
        </div>
</form>

