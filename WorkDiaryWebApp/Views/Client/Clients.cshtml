@{
    ViewData["Title"] = "Clients";
}
@model ListFromClients

<br /><br />
<h1>Select Client</h1>
<br />
<div class="scroll-all">
    <table class="table table-striped">
         <thead>
        <tr class="static-radial">
            <th class="th-static" scope="col">#</th>
            <th class="th-static" scope="col">Name</th>
            <th class="th-static" scope="col">Email</th>
            <th class="th-static" scope="col">Select</th>
            <th class="th-static" scope="col">Manage</th>
        </tr>
    </thead>
        <tbody>
            @{
                int count = 0;
            }
            @foreach (var client in Model.Clients)
            {
                count++;
                <tr>
                    <th scope="row">@count</th>
                    <td>@client.FullName</td>
                    <td>@client.Email</td>
                    <td><a href="/Client/Client?clientId=@client.Id" class="btn button-return" role="button">Select</a></td>
                    <td><a href="/Client/EditClient?clientId=@client.Id" class="btn btn-danger" role="button">Edit</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>