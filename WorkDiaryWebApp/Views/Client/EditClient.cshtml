@{
    ViewData["Title"] = "EditClient";
}
@model ClientInfoModel

<table class="table">
    <thead>
        <tr>
            <th scope="col">Current First Name</th>
            <th scope="col">Current Last Name</th>
            <th scope="col">Current Email</th>
            <th scope="col">Current Birthday</th>
            <th scope="col">IsActive</th>
        </tr>
    </thead>
    <tbody>
        <tr class="table-active">
            <td>@Model.FirstName</td>
            <td>@Model.LastName</td>
            <td>@Model.Email</td>
            <td>@Model.BirthDay</td>
            <td>@Model.IsActive</td>
        </tr>

    </tbody>
</table>

<form class="form-inline" asp-controller="Client" asp-action="EditClient" method="post">

    <p class="text-primary">New First Name:</p>
    <input asp-for=@Model.FirstName class="form-control" type="text" value=@Model.FirstName>
    <span asp-validation-for=@Model.FirstName class="text-danger"></span>
    <br />
     <p class="text-primary">New Last Name:</p>
    <input asp-for=@Model.LastName class="form-control" type="text" value=@Model.LastName>
    <span asp-validation-for=@Model.LastName class="text-danger"></span>
    <br />
     <p class="text-primary">New Email:</p>
    <input asp-for=@Model.Email class="form-control" type="text" value=@Model.Email>
    <span asp-validation-for=@Model.Email class="text-danger"></span>
    <br /> 
    <p class="text-primary">New BirthDay:</p>
    <input asp-for=@Model.BirthDay class="form-control" type="text" value=@Model.BirthDay>
    <span asp-validation-for=@Model.BirthDay class="text-danger"></span>
    <br />

    <div class="col-lg-6 col-md-6 col-12">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <p class="text-primary">Status Options:</p>
                <select class="form-control select2bs4" name="IsActive" id="IsActive" style="width: 100%">
                    <option value="@Model.IsActive">Current Status</option>
                    <option value="true">Activate</option>
                    <option value="false">Deactivate</option>
                </select>
            </div>
        </div>
    </div>

    <input asp-for=@Model.Id class="form-control" type="hidden" value=@Model.Id>
    <br />
    <button class="btn btn-danger" type="submit">Save changes</button>

    <a href="/Client/Clients" class="btn btn-primary" role="button">Back</a>

</form>



