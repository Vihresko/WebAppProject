<h1 class="text-center mt-2">Here will be form for add new procedure.</h1>
<form asp-controller="Procedure" asp-action="AddProcedure" method="post">
         <div class="form-floating mb-3">
          <input name="Name" class="form-control" id="floatingInput">
          <label for="floatingInput">Procedure Name</label>
        </div>
        <div class="form-floating mb-3">
          <input name="Description" class="form-control" id="floatingInput">
          <label for="floatingInput">Description</label>
        </div>
        <div class="form-floating mb-3">
          <input type="number" name="Price" class="form-control" id="floatingInput">
          <label for="floatingInput">Price</label>
        </div>
        <div class="d-grid gap-2">
          <button class="btn btn-primary" type="submit">Button</button>
        </div>
</form>
